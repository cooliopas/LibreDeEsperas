<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 
    <TextView
        android:id="@+id/txtCurrentsTurnsFragIT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7B7B7B"
        android:text="@string/lblCurrentMonth"
        android:textColor="#FFFFFF"
        android:textSize="20sp" 
        android:padding="10dp"/>
    
    <View
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:background="@android:color/darker_gray"/>
    
     <ListView
         android:id="@+id/lstCurrentsTurnsFragIT"
         android:layout_width="match_parent"
         android:layout_height="200dp">
     </ListView>
      
        
     <TextView
        android:id="@+id/txtOthersTurnsFragIT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblOthersMonth" 
        android:textSize="20sp"
        android:background="#7B7B7B"
        android:textColor="#FFFFFF"
        android:padding="10dp"/>
     
     <View
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:background="@android:color/darker_gray"/>
    
     <ListView android:id="@+id/lstOthersTurnsFragIT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
 
</LinearLayout>
