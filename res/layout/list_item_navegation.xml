<?xml version="1.0" encoding="utf-8"?>
 
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="15dp"
  android:footerDividersEnabled="false"
  >
 
    <ImageView
      android:id="@+id/logoMenuItem"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:contentDescription="Menu Logo"
      android:src="@drawable/ic_navigation_new"
	  android:layout_marginRight="10dp"
      android:layout_marginLeft="2dp"
/>
    
	<TextView android:id="@+id/LblMenuTurnosNuevos"
	    android:layout_width="180dp"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textColor="#000"
	    android:textSize="20sp"
	   	android:layout_toRightOf="@+id/logoMenuItem"
	    android:text="Nosotros"
	    android:paddingLeft="5dp"
    />
 
 
</RelativeLayout>
